<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.ui.cs.mobileprogramming.frannajaya.racingtracker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/rac_trac_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/rac_trac_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main Activity-->
        <activity android:name="id.ac.ui.cs.mobileprogramming.frannajaya.racingtracker.MainActivity" >
            <intent-filter>
                <!-- MAIN represents that it is the Main Activity-->
                <action android:name="android.intent.action.MAIN" />
                <!-- Launcher Denotes that it will be the first launching activity-->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- New Race Activity-->
        <activity android:name="id.ac.ui.cs.mobileprogramming.frannajaya.racingtracker.CreateNewRaceActivity" >
        </activity>
        <!-- Race List Activity-->
        <activity android:name="id.ac.ui.cs.mobileprogramming.frannajaya.racingtracker.RaceListActivity" >
        </activity>
        <!-- Race Details Activity-->
        <activity android:name="id.ac.ui.cs.mobileprogramming.frannajaya.racingtracker.RaceDetailsActivity" >
        </activity>
        <!-- Change Language Activity-->
        <activity android:name="id.ac.ui.cs.mobileprogramming.frannajaya.racingtracker.ChooseLanguageActivity" >
        </activity>
        <!-- New Match Activity-->
        <activity android:name="id.ac.ui.cs.mobileprogramming.frannajaya.racingtracker.CreateNewMatchActivity" >
        </activity>
        <!-- Match Details Activity-->
        <activity android:name="id.ac.ui.cs.mobileprogramming.frannajaya.racingtracker.MatchDetailsActivity" >
        </activity>
        <!-- New Record Activity-->
        <activity android:name="id.ac.ui.cs.mobileprogramming.frannajaya.racingtracker.CreateNewRecordActivity" >
        </activity>
        <!-- Record Details Activity-->
        <activity android:name="id.ac.ui.cs.mobileprogramming.frannajaya.racingtracker.RecordDetailsActivity" >
        </activity>

    </application>
</manifest>